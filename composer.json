{
    "name": "webregul/sms-ru-client",
    "description": "sms.ru client",
    "keywords": ["smsru"],
    "homepage": "https://github.com/webregul/sms-ru-client",
    "license": "MIT",
    "authors": [
        {
          "name": "webregul",
          "role": "Developer",
          "email": "info@webregul.ru",
          "homepage": "https://github.com/webregul"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
      "psr-4": {
        "WebRegul\\SmsRu\\": "src"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "WebRegul\\SmsRu\\Tests\\": "tests"
      }
    },
    "config": {
      "sort-packages": true
    },
    "scripts": {
      "test": "vendor/bin/phpunit --do-not-cache-result --color=always --coverage-clover=coverage.xml"
    }
}
